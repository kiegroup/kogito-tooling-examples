{
  "name": "vscode-extension-pack-simple-react",
  "displayName": "KIE :: Kogito Simple React Editor",
  "description": "",
  "main": "./dist/extension/extension.js",
  "version": "0.6.1",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.46.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling-examples.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:kieKogitoWebviewSimpleEditors"
  ],
  "publisher": "kogito-tooling-examples",
  "contributes": {
    "customEditors": [
      {
        "viewType": "kieKogitoWebviewSimpleEditors",
        "displayName": "KIE Kogito Simple React Editor",
        "selector": [
          {
            "filenamePattern": "*.txt"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "txt",
        "extensions": [
          ".txt"
        ],
        "aliases": [
          "txt",
          "Text"
        ]
      }
    ]
  },
  "scripts": {
    "pack-extension": "vsce package --yarn -o ./dist/kogito_tooling_examples_vscode_extension_simple_react_$npm_package_version.vsix",
    "compile": "yarn run build:fast",
    "watch": "yarn run build:fast",
    "build:fast": "rm -rf dist && webpack",
    "build": "yarn run build:fast",
    "build:prod": "yarn run build --mode production --devtool none && yarn run pack-extension"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-react": "7.7.0",
    "@types/mocha": "5.2.7",
    "@types/node": "^12.12.5",
    "@types/vscode": "^1.46.0",
    "babel-loader": "8.0.6",
    "mocha": "6.1.4",
    "ts-jest": "^25.3.1",
    "ts-loader": "6.2.1",
    "tslint": "5.12.1",
    "typescript": "3.8.3",
    "vsce": "1.59.0",
    "vscode-test": "1.0.0",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10"
  },
  "dependencies": {
    "@kogito-tooling/editor": "0.6.1",
    "@kogito-tooling/patternfly-base": "0.6.1",
    "@kogito-tooling/vscode-extension": "0.6.1",
    "simple-react-editors": "0.6.1"
  }
}
